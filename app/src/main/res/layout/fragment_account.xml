<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="20dp"
    android:weightSum="7.0"
    android:orientation="vertical"
    tools:context="com.example.chinna.deliveryapp.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_weight="1.0"
        android:layout_gravity="center"
        android:src="@drawable/account"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="2.0"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="17dp"
            android:text="Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:text="Your Name"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="2.0"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="17dp"
            android:text="Pincode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pincode"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:text="Your Gmail"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="2.0"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="17dp"
            android:text="Mobile No"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:text="Your Number"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="2.0"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="17dp"
            android:text="CompanyMail"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1.0"
            android:textSize="15dp"
            android:text="company@gmail.com"/>


    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1.0"
        android:hint="Wirte Your Review"
        android:layout_marginTop="15dp"
        android:textColorHint="#fff"
        android:gravity="center"
        android:background="@drawable/buttons"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="SEND"
        android:textColor="#fff"
        android:background="#f40909"
        android:layout_marginTop="15dp"/>
</LinearLayout>
